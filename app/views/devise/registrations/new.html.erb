<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div><br /><br />

  <div class="field"><%= f.label :password %>
  <%= f.password_field :password %></div><br /><br />

  <div class="field"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br /><br />

<div><%= f.submit "Sign up", :class => "button" %></div>
<br />
<% end %>

<%= render "devise/shared/links" %>
