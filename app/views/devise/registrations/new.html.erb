<div class="row">
  <%= form_for(@user, :as => :user, :url => registration_path(:user), :html => { :class => "col-sm-4" }) do |f| %>
    <h2>Sign Up</h2>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, :placeholder => "Password Again", :class => "form-control" %>
    </div>

    <div class="pull-left"><%= f.submit "Sign Up", :class => "btn btn-primary" %></div>

    <div class="pull-left already-a-user">Already a user? <%= link_to "Sign In", new_user_session_path, :class => "traditional-link" %></div>

    <br class="clear">
  <% end %>
</div>
